<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Level (5 Sentences)"
            android:textColor="#E0E0E0"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/levelIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Level ID (e.g., level_1)"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <!-- Предложение 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence 1"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/russian1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Russian sentence"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/english1EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="English translation"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <!-- Предложение 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence 2"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/russian2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Russian sentence"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/english2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="English translation"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <!-- Предложение 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence 3"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/russian3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Russian sentence"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/english3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="English translation"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <!-- Предложение 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence 4"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/russian4EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Russian sentence"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp" />
        <EditText
            android:id="@+id/english4EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="English translation"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <!-- Предложение 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence 5"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/russian5EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Russian sentence"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/english5EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="English translation"
            android:textColor="#E0E0E0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Level"
            android:backgroundTint="#363636"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>