<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c1c1c"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Заголовок и кнопка "Назад" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Назад"
                android:src="@drawable/back50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Редактировать уровень (5 предложений)"
                android:textColor="#E0E0E0"
                android:textSize="24sp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID уровня (например: level_1)"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/levelIdEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Предложение 1 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предложение 1"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Русское предложение"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/russian1EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Английский перевод"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/english1EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Предложение 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предложение 2"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Русское предложение"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/russian2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Английский перевод"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/english2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Предложение 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предложение 3"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Русское предложение"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/russian3EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Английский перевод"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/english3EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Предложение 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предложение 4"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Русское предложение"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/russian4EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Английский перевод"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/english4EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Предложение 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предложение 5"
            android:textColor="#E0E0E0"
            android:textSize="18sp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Русское предложение"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="8dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/russian5EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Английский перевод"
            app:hintTextColor="#A0A0A0"
            android:textColorHint="#A0A0A0"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/english5EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#E0E0E0" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сохранить уровень"
            android:backgroundTint="#363636"
            android:textColor="#E0E0E0"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Удалить уровень"
            android:backgroundTint="#FF4444"
            android:textColor="#E0E0E0"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>